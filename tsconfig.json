{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2015",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/unit/**/*.test.ts"
  ]
}
